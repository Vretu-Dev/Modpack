<Window x:Class="WotModpackLoader.ModInstalledWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Instalacja zakończona"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="#f9f9f9"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False">
	<Border Margin="16" CornerRadius="16" Background="White" BorderBrush="#2196F3" BorderThickness="7" >
		<StackPanel Margin="32" HorizontalAlignment="Center">
			<Grid Width="48" Height="48" Margin="0,0,0,16">
				<Ellipse Fill="#4CAF50" StrokeThickness="0">
					<Ellipse.Effect>
						<DropShadowEffect ShadowDepth="0" Color="#AA000000" BlurRadius="8"/>
					</Ellipse.Effect>
				</Ellipse>
				<TextBlock Text="✔" FontSize="34" FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           TextAlignment="Center" Width="42" Margin="1,-4,0,0"/>
			</Grid>
			<TextBlock Text="Mod został zainstalowany pomyślnie!" FontWeight="Bold" FontSize="18" Foreground="#333" TextAlignment="Center" Margin="0,0,0,8"/>
			<TextBlock Text="Możesz już zamknąć to okno lub zainstalować kolejny mod." FontSize="14" Foreground="#666" TextAlignment="Center" Margin="0,0,0,24"/>
			<Button Content="Zamknij" Width="100" Height="32" Background="#2196F3" Foreground="White" FontWeight="Bold" BorderThickness="0"
                    Cursor="Hand" Click="Button_Click" HorizontalAlignment="Center">
				<Button.Template>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}" CornerRadius="8">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Button.Template>
			</Button>
		</StackPanel>
	</Border>
</Window>