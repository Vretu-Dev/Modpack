<Window x:Class="WotModpackLoader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="World of Tanks Modpack Loader"
        Height="310" Width="550"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">
    <Window.Resources>
        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="10" ShadowDepth="3" Direction="270" Color="#22000000" />
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Background" Value="#FF1A73E8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF185ABC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Effect="{StaticResource ShadowEffect}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="BorderBrush" Value="#FF185ABC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#FFF5F5F5"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="14" Padding="16" Margin="14" Background="White" Effect="{StaticResource ShadowEffect}">
        <StackPanel>
            <TextBlock FontSize="22" FontWeight="Bold" Foreground="#FF185ABC" Margin="0,0,0,10"><Run Text="World of Tanks Modpack"/><LineBreak/><Run/></TextBlock>
            <TextBlock Text="Automatyczne wykrywanie oraz wybór folderu instalacji gry World of Tanks." 
                       Foreground="#666" FontSize="14" Margin="0,0,0,20"/>
            <TextBlock Text="Ścieżka do folderu gry:" FontSize="15" Margin="0,0,0,4"/>
            <DockPanel Margin="0,0,0,8">
                <TextBox Name="GameFolderTextBox" Width="320" IsReadOnly="True" VerticalAlignment="Center" TextChanged="GameFolderTextBox_TextChanged"/>
                <StackPanel Orientation="Vertical" Margin="8,0,0,0" VerticalAlignment="Top">
                    <Button Content="Przeglądaj..." Width="120" Height="32"
                            VerticalAlignment="Center" Click="BrowseButton_Click"/>
                    <Button Name="NextButton" Content="Dalej →" Width="120" Height="32" Margin="0,6,0,0"
                            IsEnabled="False" Click="NextButton_Click"/>
                </StackPanel>
            </DockPanel>
            <TextBlock Text="Jeśli ścieżka nie została wykryta automatycznie, wybierz ręcznie folder główny gry." 
                       FontSize="12" Foreground="#999" Margin="0,10,0,0"/>
        </StackPanel>
    </Border>
</Window>